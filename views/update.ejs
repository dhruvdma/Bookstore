<%- include("./partials/header") %>
<%- include("./partials/nav") %>
<h1 class="text-center">This is Update Page</h1>
<form action="/update/<%= book._id %>" method="post" enctype="multipart/form-data">
  
  <div class="d-flex p-2 col-4 justify-content-center" >
    <input class="form-control mb-3" type="file" name="image"  >
  </div>
  <div class="d-flex p-2 col-4 justify-content-center" >
    <input type="text" class="form-control" name="name" placeholder="Book Name" value="<%= book.name%>" >
  </div>
  <div class="d-flex p-2 col-4 justify-content-center">
    <input type="text" name="author" placeholder="Author Name" class="form-control">
  </div>  
  <div class="d-flex p-2 col-4 justify-content-center">
    <input type="number" name="price" placeholder="Book Price" class="form-control">
  </div>
  <div class="d-flex p-2 col-4 justify-content-center">
    <input type="text" name="category" placeholder="Book Category" class="form-control">
  </div>
  <div class="d-flex p-2 col-4 justify-content-center">
    <input type="text" name="language" placeholder="Book Language" class="form-control">
  </div>
  <div class="d-flex p-2 col-4 justify-content-center">
    <input type="number" name="quantity" placeholder="Book Quantity" class="form-control">
  </div>
  <div class="form-check d-flex p-2">
    <textarea name="description" cols="30" rows="10" placeholder="Enter Description Here"></textarea>
  </div>
  <div class="d-flex p-2">
    <button type="submit" class="btn btn-primary">Update Book</button> 
  </div>

<%- include("./partials/footer") %>